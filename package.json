{
	"name": "cgreen-test-provider",
	"displayName": "Cgreen Test Provider",
	"description": "Show result of your Cgreen tests in VSCode Test View",
	"version": "0.0.1",
	"publisher": "cgreen-devs",
	"private": true,
	"license": "MIT",
	"repository": "https://github.com/cgreen-devs/vscode-cgreen-test-provider",
	"enabledApiProposals": [
		"testCoverage"
	],
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:c",
		"onLanguage:cpp"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint \"src/**/*.ts\"",
		"watch": "tsc -watch -p ./",
		"download-api": "dts main && dts dev",
		"postinstall": "npm run download-api"
	},
	"devDependencies": {
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.26.0",
		"typescript": "^5.2.2",
		"@vscode/dts": "^0.4.0"
	}
}
